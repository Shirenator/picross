source 'https://rubygems.org'

gem 'gtk3'

# makefile-like tasks
gem 'rake'

group :development do
	# documentation
	gem 'rdoc', '~> 4.3'
	gem 'hanna-nouveau'
	gem 'hanna-bootstrap'

	# picross recognizer
	gem 'nokogiri' # html parser
	gem 'rmagick'  # image processing
end

group :test do
	# unit tests & test coverage
	gem 'rspec'
	gem 'simplecov'
end
